<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>
        Some Title
    </title>
</head>
<body>

<div align=center>

</p>
<p>
You have {{ friends|length }} friends: {{ friends|join:", " }}
</p>
I have some albums:
<br>
{% comment %}
{% for album in albums %}
{{ album.genre }} <br>
{% endfor %}
{% endcomment %}


{# this is exciting #}
<table bgcolor="#DCDCDC" width="60%" border="1">



{% for album in albums %}
{% set trackscount = album.tracks|length %}
  <tr>
  <td>



      <table border="1" width=100%>

          <tr>
              <td colspan="3">
              {{ album.artist }} - [{{ album.date }}] {{ album.album }}
              </td>
          </tr>

          <tr>
             <td rowspan="4" colspan="{{ trackscount }}" valign=top width=300>
             <img src="/covers/{{ album.path }}/{{ album.cover }}" style="align:left;width:300px;height:300px;">
             </td>
          </tr>

          <tr align=left valign=top>
             <td>
                 <table bgcolor="#F0F8FF" border="1" width=100%>
                     {% for track in album.tracks %}
                     <tr><td>{{ track.title }}</td> </tr>
                     {% endfor %}
                 </table>
             </td>
          </tr>

      </table>



  </td>
  </tr>
{% endfor %}

</table>

{% for page in pages_list %}
    {% if page == current_page %}
        {{ page }}
    {% else %}
        <a href="?page={{ page }}&limit={{ limit_on_page }}">{{ page }}</a>
    {% endif %}
{% endfor %}


<br>
Stats: Albums - {{ albums_count }}, Pages - {{ pages_count }}, LimitOnPage - {{ limit_on_page }}

</div>

</body>
</html>
